# FastAPI ML Service (Render)
PORT=8000
HOST=0.0.0.0

# Comma-separated list of allowed origins (Vercel URLs, etc.)
ALLOWED_ORIGINS=https://your-frontend.vercel.app

# Directory for SQLite databases and cached models
# For Render: Use relative path (e.g., ./data) or persistent disk mount (e.g., /var/data/ml)
# If not set, defaults to the service directory
ML_STORAGE_DIR=./data

# External service URLs
NEXTJS_API_URL=https://your-frontend.vercel.app

# API Keys
GEMINI_API_KEY=replace-with-google-gemini-key

